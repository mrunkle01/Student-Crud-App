<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 m-0">Students</h1>
    <a href="/students/new" class="btn btn-primary">Add Students</a>
</div>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle m-0">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>First</th>
                    <th >Last</th>
                    <th >Major</th>
                    <th >GPA</th>
                    <th>Full Name</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each students}}
                    <tr>
                        <td>{{StudentID}}</td>
                        <td>{{FirstName}}</td>
                        <td >{{LastName}}</td>
                        <td >{{Major}}</td>
                        <td>{{GPA}}</td>
                        <td >{{FirstName}} {{LastName}}</td>
                        <td class="text-center">
                            <a href="/students/{{StudentID}}" class="btn btn-outline-secondary btn-sm rounded-pill me-1">View</a>
                            <a href="/students/{{StudentID}}/edit" class="btn btn-outline-primary btn-sm rounded-pill me-1">Edit</a>

                            <form method="POST"
                                  action="/students/{{id}}?_method=DELETE"
                                  class="d-inline"
                                  onsubmit="return confirm('Delete Student #{{StudentID}}?');">
                                <button class="btn btn-outline-danger btn-sm rounded-pill">Delete</button>
                            </form>
                        </td>

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
